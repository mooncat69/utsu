<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>utsu</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <!-- The main app. -->
        <fileSet>
            <directory>${project.build.directory}/jfx/app/</directory>
            <outputDirectory>/utsu/</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>
        <!-- Jar Dependencies. -->
        <fileSet>
            <directory>${project.build.directory}/jfx/app/lib/</directory>
            <outputDirectory>/utsu/lib/</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>
        <!-- The Windows Executable. -->
        <fileSet>
            <directory>${project.build.directory}</directory>
            <outputDirectory>/utsu/</outputDirectory>
            <includes>
                <include>*.exe</include>
            </includes>
        </fileSet>
        <!-- Bundled assets, for testing (voicebank, wavtool, resampler). -->
        <fileSet>
            <directory>${project.build.directory}/assets/</directory>
            <outputDirectory>/utsu/assets/</outputDirectory>
            <includes>
                <include>**</include>
            </includes>
            <excludes>
                <exclude>**/LICENSES</exclude>
            </excludes>
            <fileMode>775</fileMode>
            <directoryMode>775</directoryMode>
        </fileSet>
        <!-- Licenses for bundled assets -->
        <fileSet>
            <directory>${project.build.directory}/assets/</directory>
            <outputDirectory>/utsu/assets/</outputDirectory>
            <includes>
                <include>**/LICENSES</include>
            </includes>
            <fileMode>664</fileMode>
            <directoryMode>775</directoryMode>
        </fileSet>
    </fileSets>
</assembly>
